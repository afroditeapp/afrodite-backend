{
    "openapi":"3.0.2",
    "info": {
      "title":"Pihka Backend",
      "version":"1.0"
    },
    "servers": [
      {"url":"http://127.0.0.1:3000/api/v1"}
    ],
    "security": [{"ApiKeyAuth": []}],
    "components": {
        "schemas": {
            "Profile": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "name": "X-API-KEY",
                "in": "header"
            }
        }
    },
    "paths": {
        "/register": {
            "post": {
                "description": "Create new profile",
                "security": [],
                "requestBody":{
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Profile"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }

            }
        },
        "/login": {
            "post": {
                "description": "Login and receive valid API key.",
                "security": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "description": "Logout. Invalidates API key.",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/settings/profile": {
            "get": {
                "description": "Get your profile",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "patch": {
                "description": "Update your profile",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/settings/profile/image/{imgNumber}": {
            "post": {
                "description": "Upload image.",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/settings/account": {
            "get": {
                "description": "Get account information",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/profiles/{profileId}": {
            "get": {
                "description": "Get public profile info.",
                "parameters": [{
                    "name": "profileId",
                    "in" : "path"
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Profile"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/profiles/{profileId}/{imgNumber}": {
            "get": {
                "description": "Get profile image files.",
                "parameters": [
                    {
                        "name": "profileId",
                        "in" : "path"
                    },
                    {
                        "name": "imgNumber",
                        "in" : "path"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "image/webp": {}
                        }
                    }
                }
            }
        }
    }
}
